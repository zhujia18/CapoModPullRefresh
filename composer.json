{
    "name": "capomod/pullrefresh",
    "description": "CapoMod Pull To Refresh",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "Jasper",
            "email": "443493410@qq.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "CapoMod\\PullRefresh\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "CapoMod Pull To Refresh",
            "category": "feature",
            "icon": {
                "name": "fas fa-signal",
                "color": "#e74c3c",
                "backgroundColor": "#fff"
